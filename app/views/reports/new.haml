- content_for :css do
  =stylesheet_link_tag 'basic/edit_form.css', :media=>'screen'

= object_errors(@report)

.edit_form
  %h5
    Создать Новость
  
  -form_for :report, :url => reports_path do |f|
    %label{:for=>:title}
      Заголовок
    %span
      = f.text_field :title, :class=>:input
      
    %label{:for=>:description}
      Описание
    %span
      = f.text_field :description, :class=>:input
      
    %label{:for=>:content}
      Содержимое
    %span
      = f.text_area :content, :class=>:textarea_mid

    = submit_tag 'Создать', :class=>:submit

= link_to 'Полный список', reports_path