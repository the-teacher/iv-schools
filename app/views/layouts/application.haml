!!! Strict
%html{:xmlns=>"http://www.w3.org/1999/xhtml", 'xml:lang'=>"en", :lang=>"en"}
  %head
    %meta{'http-equiv'=>"content-type", :content=>"text/html; charset=utf-8"}
    %link{:href=>"/images/favicon.ico", :rel=>"shortcut icon"}
    %title
      =yield :title
    =yield :meta
    
    =stylesheet_link_tag 'basic/style.css', :media=>'screen'
    =stylesheet_link_tag 'basic/main_bar.css', :media=>'screen'
    =stylesheet_link_tag 'basic/current_editor_bar.css', :media=>'screen'
    =stylesheet_link_tag 'basic/users_listing.css', :media=>'screen'
    =stylesheet_link_tag 'basic/paginator', :media=>'screen'

    - content_for :js do
      =#javascript_include_tag :defaults  
      =javascript_include_tag "prototype"
      =javascript_include_tag "effects"
      =javascript_include_tag "application"
      
    =yield  :js
    =yield  :css

    - content_for :meta do
      %meta{:name=>"description", :content=>"Ивановский региональный школьный портал"}
      %meta{:name=>"keywords", :content=>"Ивановский региональный школьный портал"}
      %meta{:name=>"author", :content=>"killich@yandex.ru, Илья Зыкин"}
      

      
      
    - content_for :css do
      =#stylesheet_link_tag 'haml_scaffolds/reset', :media=>'screen'
      =#stylesheet_link_tag 'haml_scaffolds/style', :media=>'screen'
      =stylesheet_link_tag 'basic/paginator', :media=>'screen'
      
    - content_for :title do
      Иваново, Школьный портал
  %body
    .body
      -#if logged_in?
      -# =render :partial => 'shared/main_bar_logined'
      -#-else
      -# =render :partial => 'shared/main_bar'

      =image_tag @user.base_header.url, :alt=>"iv-schools.ru"

      .header{:id=>:header}
        - if @subdomain == 'portal' || @subdomain.nil?
          = link_to "Ивановский школьный портал iv-schools.ru", root_path
        - else
          = link_to @subdomain.to_s + ".iv-schools.ru", root_path(:subdomain=>@subdomain)

      %ul.system_navigation
        %li
          =link_to image_tag('star.png'), root_url(:subdomain=>false)
          =link_to 'iv-schools.ru', root_url(:subdomain=>false)
        %li
          =link_to t('questions'), url_for(:controller=>:questions)
        %li
          =link_to t('users'), users_path
        %li
          =link_to t('site_map'), pages_path(:subdomain=>@user.subdomain)
        %li
          - if logged_in?
            =link_to t('exit'), logout_url(:subdomain=>@user.subdomain)
          - else
            =link_to t('login'), login_path(:subdomain=>false)
        -#
          %li
            =link_to t('news'), url_for(:controller=>:reports)
          %li
            =link_to t('albums'), url_for(:controller=>:albums)
          %li
            =link_to t('documents'), url_for(:controller=>:documents)

            
      %table.main
        %tbody
          %tr
            %td.navigation
              .alpha
                Сайт запущен в режиме тестирования
                %br
                Если Вы обнаружили ошибку или у Вас возник вопрос, то вам
                =link_to 'cюда', 'http://portal.iv-schools.ru/questions', :style=>'color:blue;'
              = yield(:current_editor) unless yield(:current_editor).blank?
              = yield(:navigation_menu) unless yield(:navigation_menu).blank?
              
            %td.content
              .block
                = app_flash(flash)
                =yield

      .footer
        .block
          .moderator
            
          .portal
            = link_to t('site_description'), root_url(:subdomain=>false)
            &nbsp;&nbsp;&nbsp;2006 &mdash; 2009 &copy;
            -# Язык интерфейса:
            =# select("local", "lang", {'английский'=>'/?lang=en', 'русский'=>'/?lang=ru'}, {:selected=>"/?lang=#{cookies[:lang]}"}, :onchange=>"top.location.href = this.options[this.selectedIndex].value")
                  