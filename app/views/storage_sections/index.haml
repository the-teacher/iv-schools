%h3 Хранилище файлов
.map
  %ul
    - @storage_sections.each do |section|
      %li{:style=>"padding:10px;margin:0 0 10px 0; border:3px solid #CCC;"}
        =link_to section.name, storage_section_url(section.zip)
  
= object_errors(@page)

.edit_form
  %h5
    Создать новый раздел
    
  -form_for :storage_section, :url => storage_sections_path do |f|
    %label{:for=>:title}
      Название раздела
    %span
      = f.text_field :name, :class=>:input
      
    = submit_tag 'Создать', :class=>:submit
